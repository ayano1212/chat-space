.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-bar__header__box__user-name
        = current_user.name
      %ul.side-bar__header__box__menu
        %li.side-bar__header__box__edit
          =link_to new_group_path do
            =icon("fas", "edit")
        %li.side-bar__header__box__cog
          =link_to edit_user_path(current_user) do
            =icon("fas", "cog")
  .side-bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group" do
          %p.group__member
            =group.name
          %p.group__message
            = group.show_last_message
